@using FinalProject.DTO
@using FinalProject.Entities
@model AssignmentObjectives
<a class="btn btn-outline-secondary mb-4" asp-controller="AssignmentObjective" asp-action="Index">Go Back</a>

<div class="col-md-4">
    <form method="post" action="/AssignmentObjective/Edited?objectiveId=@Model.objectiveId&AssignmentId=@Model.assignmentId">
        <div class="form-floating">
            <select asp-for="assignmentId" class="form-control" aria-required="true">
                <option>Assignment</option>
                @foreach (var assignment in (List<Assignment>)(ViewBag.Assignments))
                {
                    if (@assignment.assignmentId == @Model.assignmentId)
                    {
                        <option selected value="@assignment.assignmentId">@assignment.training.studentId</option>
                    }
                    else
                    {
                        <option value="@assignment.assignmentId">@assignment.training.studentId</option>
                    }
                }
            </select>
        </div>
        <div class="form-floating">
            <select asp-for="objectiveId" class="form-control" aria-required="true">
                <option>objective</option>
                @foreach (var objective in (List<Objective>)(ViewBag.objectives))
                {
                    if (@objective.objectiveId == @Model.objectiveId)
                    {
                        <option selected value="@objective.objectiveId">@objective.objectiveName</option>
                    }
                    else
                    {
                        <option value="@objective.objectiveId">@objective.objectiveName</option>
                    }
                }
            </select>
        </div>
        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Edit Assignment Objectives</button>
    </form>
</div>